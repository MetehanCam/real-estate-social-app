{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "functions": {
    "api/auth.js": {
      "maxDuration": 10
    },
    "api/posts.js": {
      "maxDuration": 10
    },
    "api/users.js": {
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/auth",
      "dest": "/api/auth.js"
    },
    {
      "src": "/api/posts",
      "dest": "/api/posts.js"
    },
    {
      "src": "/api/users",
      "dest": "/api/users.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "JWT_SECRET": "@jwt_secret"
  }
}